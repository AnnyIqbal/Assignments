</script>

<!-- Ass # 05 -->

<script>
    var num = 5, multiple;
    for(var count = 1; count <= 10 ;count++)
    {
       multiple = num*count;
       document.write("<br />" + num + " x " + count + " = " + multiple);
    }
</script>

<!-- Ass # 06 -->

<script>
    var celcius = 12, fahrenheit;
    fahrenheit = (celcius *9/5)+32;
    document.write("<br />" + celcius + " <sup>o</sup>C is " + fahrenheit + " <sup>o</sup>F");

    fahrenheit = 68;
    celcius = (fahrenheit - 32)*5/9;
    document.write("<br />" + fahrenheit + " <sup>o</sup>F is " + celcius + " <sup>o</sup>C");

