// Ass 15 :The Lifetime Supply Calculator

var s = "chips", ca = 15, ma = 85, a = 2, life;

life = (ma - ca) * (a * 30 * 12);

document.write("You will need" + life + s + " to last you until the ripe old age of " + ma);

