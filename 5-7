</script>

<!-- Ass # 02 -->

<script>
    var num1 = 13, num2 = 9,difference, product, quotient, remainder;
    difference = num1 - num2;
    product = num1 * num2;
    quotient = num1 / num2;
    remainder = num1 % num2;
    alert("Result of Subtracting " + num2 + " from " + num1 + " is " + difference);
    alert("Result of Multiplying " + num1 + " with " + num2 + " is " + product);
    alert("Result of Dividing " + num1 + " by " + num2 + " is " + quotient);
    alert("Remainder when " + num1 + " is divided by " + num2 + " is " + remainder);
</script>

<!-- Ass # 03 -->

<script>
    var x;
    document.write("<br /> Value after variable declaration is : " + x);
    x = 5;
    document.write("<br /> Initial value of the variable is : " + x);
    x++;
    document.write("<br /> Value after increment is " + x);
    x = x + 7;
    document.write("<br /> Value after addition is " + x);
    x--;
    document.write("<br /> Value after decrement is " + x);
    document.write("<br /> The remainder is " + x%5);
</script>

