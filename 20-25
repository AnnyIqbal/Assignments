//ass 24

var st = "Pakistan";
str = st.toLowerCase();
var v=0,c=0;

for(var i = 0; i < str.length; i++)
{
if(str.charAt(i) === "a" || str.charAt(i) === "e" || str.charAt(i) === "i" || str.charAt(i) === "o" || str.charAt(i) === "u")
{
v++;
}
else
{
c++;
}
}
document.write("There are " + v + " vowels and "+c+" consonants in " + st);


